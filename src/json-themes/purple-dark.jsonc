    "editor.tokenColorCustomizations": {
        "comments": "#efe6fe25", // neutralA 5
        "functions": "#7c7a85", // neutral 10
        "keywords": "#6958ad", // primary 8
        "numbers": "#d19dff", // primary contrast 11
        "types": "#30a46c", // types 9
        "textMateRules": [
            // --------------------------------------------------------
            // --------------------------------------------------------
            // TYPES
            // --------------------------------------------------------
            // --------------------------------------------------------
            {
                "scope": [
                    "support.type.primitive",
                    "keyword.operator.expression.typeof",
                    "meta.field.declaration"
                ],
                "settings": {
                    "foreground": "#33b074", //types 10
                }
            },
            {
                "scope": [
                    "meta.field.declaration",
                    "storage.type.type",
                    "entity.other.inherited-class"
                ],
                "settings": {
                    "foreground": "#28684a", //types 7
                }
            },
            // --------------------------------------------------------
            // --------------------------------------------------------
            // OTHERS
            // --------------------------------------------------------
            // --------------------------------------------------------
            {
                "scope": [
                    "constant.language",
                    "storage.modifier",
                    "keyword.operator.new",
                    "keyword.operator.expression.of",
                    "constant.language.boolean.false",
                    "constant.language.boolean.true",
                    "storage.type.function.arrow",
                    "keyword.other.definition.ini"
                ],
                "settings": {
                    "foreground": "#6958ad", // primary 8
                }
            },
            {
                "scope": [
                    "variable.other.object",
                    "variable.parameter",
                    "variable.other.constant.property"
                ],
                "settings": {
                    "foreground": "#baa7ff", // primary 11
                }
            },
            {
                "scope": [
                    "entity.name.label",
                ],
                "settings": {
                    "foreground": "#625f69", // neutral 8
                }
            },
            {
                "scope": [
                    "meta.object-literal.key",
                    "support.variable.property"
                ],
                "settings": {
                    "foreground": "#6f6d78", // neutral 9
                }
            },
            {
                "scope": [
                    "variable.other.property",
                ],
                "settings": {
                    "foreground": "#7c7a85", // neutral 10
                }
            },
            {
                "scope": [
                    "variable.other.constant",
                    "variable",
                    "variable.other.readwrite",
                    "variable.other.object.property",
                    "variable.other.readwrite.alias",
                    "variable.object.property"
                ],
                "settings": {
                    "foreground": "#eeeef0", // neutral 12
                }
            },
            {
                "scope": [
                    "punctuation",
                    "punctuation.definition.string",
                    "punctuation.accessor.optional",
                    "keyword.operator"
                ],
                "settings": {
                    "foreground": "#eeeef0", // neutral 12
                }
            },
            {
                "scope": [
                    "keyword.operator.ternary",
                    "punctuation.definition.template-expression",
                    "support.constant.math.ts",
                    "support.constant"
                ],
                "settings": {
                    "foreground": "#ffca16", // secondary 11
                }
            },
            {
                "scope": [
                    "meta.block",
                    "string",
                ],
                "settings": {
                    "foreground": "#ffe7b3", // secondary 12
                }
            },
            // --------------------------------------------------------
            // --------------------------------------------------------
            // TSX
            // --------------------------------------------------------
            // --------------------------------------------------------
            {
                "scope": [
                    "support.class",
                    "entity.name.tag",
                ],
                "settings": {
                    "foreground": "#ffc53d", //secondary 9
                }
            },
            {
                "scope": [
                    "entity.other.attribute-name"
                ],
                "settings": {
                    "foreground": "#b5b2bc", //neutral 11 
                }
            },
            // --------------------------------------------------------
            // --------------------------------------------------------
            // JSON
            // --------------------------------------------------------
            // --------------------------------------------------------
            {
                "scope": [
                    "support.type.property-name",
                    "punctuation.support.type.property-name",
                ],
                "settings": {
                    "foreground": "#7c7a85", // neutral 10
                }
            },
            {
                "scope": [
                    "string.quoted.double.json.comments",
                    "punctuation.definition.string.begin.json.comments",
                    "punctuation.definition.string.end.json.comments",
                ],
                "settings": {
                    "foreground": "#eeeef0", // neutral 12
                }
            }
        ]
    },
